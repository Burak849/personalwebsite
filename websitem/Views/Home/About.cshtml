@{
    ViewBag.Title = "About";
}
<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background-image: url(/Media/gunduz.svg); /* İlk arka plan */
        background-size: cover;
        background-position: center;
        font-family: roboto;
        opacity: 1;
        visibility: visible;
        transition: background-image 0.5s; /* Arka plan geçiş efekti */
    }

    .kont {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 87vh; /* Tüm yüksekliği kaplaması için */
        align-items: baseline;
        justify-content: flex-end;
    }

    .gif-container {
        margin-top: 20px;
    }

    .btn-container {
        margin-top: 20px;
    }
    /* Düşünce balonu stili */
    .thought-bubble {
        position: absolute;
        top: 47%; /* Balonun konumu */
        left: 25%;
        transform: translateX(-50%);
        background-color: white;
        /*border: 2px solid #ccc;*/
        border-radius: 10px;
        padding: 10px;
        /*box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);*/
        width: 500px; /* Balonun genişliği */
        height:auto;
        background-color: wheat;
    }

        .thought-bubble::after {
            content: '';
            position: absolute;
            bottom: 0%; /* Balonun alt kısmı */
            left: -3%;
            margin-left: -16px; /* Açıyla konumlandırma */
            border-width: 30px;
            border-style: solid;
            border-color: transparent transparent wheat transparent; /* Üstteki üçgen şekli için */
        }

    .bubble-content {
        text-align: center;
    }
    .btn:hover {
        background-color: wheat;
    }

</style>

        <div class="kont">
            <div class="gif-container">
                <img src="~/Media/hello-ezgif.gif" alt="Hellogif" style="background-repeat:no-repeat; width: 110%; height: auto;" />
                
                <div class="thought-bubble">
                    <div class="bubble-content">
                        <h4>Hello! It’s Burak!</h4>
                        <p>
                            Thanks for visiting my website! I hope you like the visitor interface. You will find my hobbies and activities in this "About Me" part, which will serve to give a better insight into who I am. To get to know me, click on the story button aside! I am looking forward to meeting you, see you soon!
                        </p>
