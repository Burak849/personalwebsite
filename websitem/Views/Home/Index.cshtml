<script>
    window.onscroll = function () {
        const scrollPosition = document.body.scrollTop || document.documentElement.scrollTop;

        if (scrollPosition > 200) {
            document.querySelector('.background2').classList.add('show-background');
            document.querySelector('.background3').classList.remove('show-background');
        } else if (scrollPosition > 220) {
            document.querySelector('.background3').classList.add('show-background');
        } else {
            document.querySelector('.background2').classList.remove('show-background');
            document.querySelector('.background3').classList.remove('show-background');
        }
    };


    const codeSymbol = document.querySelector('.code-symbol');
    const codeTexts = ['</>', 'CSS', 'SASS', 'JS', 'HTML'];
    let codeIndex = 0;

    setInterval(() => {
        codeSymbol.textContent = codeTexts[codeIndex];
        codeIndex = (codeIndex + 1) % codeTexts.length;
    }, 3000); // Her 3 saniyede bir metni değiştirir.



</script>
