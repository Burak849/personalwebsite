        background-size: cover;
        background-position: center;
        font-family: Arial, sans-serif;
        opacity: 1;
        visibility: visible;
        transition: background-image 0.5s; /* Arka plan geçiş efekti */
    }

    .background1 {
        position: relative;
        padding: 40px;
        margin: 0;
        width: 100%;
    }

    .background2 {
        position: relative; /* Pozisyonu relative yap */
        margin-left: -20px;
        margin-top: 50vh; /* İlk arka planın altında yer alacak şekilde ayarla */
        width: 103%;
        height: 120vh; /* Tüm görünüm yüksekliğini kaplar */
        background-color: #000017;
        opacity: 0; /* Başlangıçta görünmez */
        transition: opacity 0.5s; /* Geçiş efekti */
        z-index: 1; /* Daha düşük z-index */
        align-items: center;
    }

    .show-background {
        opacity: 1; /* Gösterir */
    }

    .backgroundcontainer {
        margin-top: 120px;
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        border-collapse: collapse;
        overflow: hidden;
        box-shadow: 0 5px 8px rgba(0, 0, 0, 1);
        padding: 25px;
        width: 40%;
    }

    .blur-background {
        height: 470px; /* Yüksekliği tam sayfa yapar */
        background: rgba(255, 255, 255, 0);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0);
        flex-wrap: wrap;
    }

    .background3 {
        position: relative;
        margin-left: -20px;
        width: 103%;
        height: 50vh;
        background-color: black; /* Beyaz arka plan */
        background-image: none; /* Varsayılan arka planı sıfırlayın */
        opacity: 1; /* Başlangıçta görünmez */
        transition: opacity 0.5s;
        color:white;
        z-index: 1;
    }

    .card-container {
        display: flex;
        flex-wrap: wrap; /* Kartların sığmadığında alt satıra geçmesini sağlar */
        gap: 21px; /* Kartlar arasında boşluk bırakır */
        margin-top: 400px;
        flex-direction: row;
    }

    .card {
        flex: 1 1 18rem; /* Kartların sabit genişlikte kalmasını sağlar */
        background: transparent;
        color: white;
    }
</style>


